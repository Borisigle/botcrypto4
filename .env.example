# Backend Configuration
PORT=8000
LOG_LEVEL=INFO

# CORS Configuration
CORS_ALLOW_ORIGINS=http://localhost:3000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30

# Data Source Configuration
# Options: binance_ws (default), bybit_ws
DATA_SOURCE=binance_ws

# Bybit WebSocket Configuration
BYBIT_SYMBOL=BTCUSDT
WEBSOCKET_BUFFER_SIZE=1000
BYBIT_CONNECTOR_TESTNET=false

# Bybit API Configuration (replace with actual values)
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=true

# Database Configuration (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/botcrypto4

# Strategy Configuration
SYMBOL=BTCUSDT
TIMEFRAME=1m

# Indicators Configuration
CVD_RESET_SECONDS=3600

# Liquidation Service Configuration (Binance Futures)
LIQUIDATION_SYMBOL=BTCUSDT
LIQUIDATION_LIMIT=200
LIQUIDATION_BIN_SIZE=100
LIQUIDATION_REFRESH_SECONDS=30
LIQUIDATION_MAX_CLUSTERS=20
LIQUIDATION_CATEGORY=linear
LIQUIDATION_BASE_URL=https://fapi.binance.com

# Liquidation WebSocket Configuration (Real-time)
LIQUIDATION_WEBSOCKET_ENABLED=true
LIQUIDATION_MAX_SIZE=500
LIQUIDATION_CLUSTER_REBUILD_INTERVAL=5

# Binance API Keys for Liquidation Service Authentication
# Either BINANCE_API_KEY/BINANCE_API_SECRET or LIQUIDATION_API_KEY/LIQUIDATION_API_SECRET
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
# Or use these specific liquidation service keys (override above if present)
# LIQUIDATION_API_KEY=your_liquidation_api_key_here
# LIQUIDATION_API_SECRET=your_liquidation_api_secret_here

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
